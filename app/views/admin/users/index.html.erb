<%= content_for(:title,  '用户信息列表 | Master') %>
<section class="content-header">
  <h1>
    用户信息 <small>信息预览</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Dashboard</a></li>
    <li class="active"><i class="fa fa-bicycle"></i> 用户信息</li>
  </ol>
</section>
<section class="content">
  <div class="box box-primary">
    <div class="box-header">
      <div class="row">
        <div class="col-sm-4">
          <form action="<%= admin_users_path %>" method="get">
            <div class="form-group has-feedback">
              <div class="input-group">
                <input type="text" name="query" value="<%= params[:query]%>" class="form-control" placeholder="邮箱/昵称">
                <span class="input-group-btn">
                  <button class="btn btn-default btn-flat" type="submit"><i class="fa fa-search-plus"></i></button>
                </span>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div class="box-body">
      <div class="row">
        <div class="col-sm-12">
          <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
            <thead>
            <tr>
              <th tabindex="0" aria-controls="example1" style="text-align: center;">头像</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center;">昵称</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center;">邮箱</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center;">权限</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center;width: 200px">操作</th>
            </tr>
            </thead>
            <tbody>
            <% @users.each do |item| %>
              <tr style="text-align: center;">
                <td><img src="<%= image_path('sources/avatar.png') %>" class="img-circle" height="60px"></td>
                <td><%= item.display_name %></td>
                <td><%= item.email %></td>
                <td><%= item.role_name %></td>
                <td>
                  <a href="<%= edit_admin_user_path(item) %>" class="btn bg-green btn-flat">
                    <i class="glyphicon glyphicon-edit"></i>
                    编辑
                  </a>
                  <a href="<%= admin_user_path(item) %>" class="btn bg-red btn-flat" data-method="delete" data-confirm="确定删除用户信息吗？">
                    <i class="glyphicon glyphicon-trash"></i>
                    删除
                  </a>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <%= will_paginate @users, :class=>'apple_pagination' %>
        </div>
      </div>
    </div>
  </div>
</section>